<h1>Listing trips</h1>

<table>
  <tr>
    <th>Start</th>
    <th>Stop</th>
    <th>Date</th>
    <th>Price</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.start %></td>
    <td><%= trip.stop %></td>
    <td><%= trip.date %></td>
    <td><%= trip.price %></td>
    <td><%= trip.user_id %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

