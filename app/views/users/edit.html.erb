<h1>Make your profile more sexy</h1>

<div class="row">
	<div class="span6 offset3">
    
    <%= form_for @user, :action => 'update', :html => { :multipart => true } do |f| %>
	
		<%= f.label :first_name %>
		<%= f.text_field :first_name %> 
		
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
		
		<%= f.label :email %>
		<%= f.text_field :email %> <br />
		
		<%= f.label :photo %>
		<%= f.file_field :photo %>
		
		<%= f.label :bio %>
		<%= f.text_area :bio, :placeholder => "I like to read. I also like long walks on the beach..."%>
		
		<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
	<% end %>
    </div>
</div>